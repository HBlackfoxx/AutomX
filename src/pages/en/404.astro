---
import BaseLayout from '@layouts/BaseLayout.astro';
import { useTranslations, type Language } from '@i18n/utils';

const lang: Language = 'en';
const { t } = useTranslations(lang);

const title = '404 - Page Not Found';
const description = 'The page you are looking for does not exist.';
---

<BaseLayout title={title} description={description} lang={lang}>
  <main class="min-h-screen flex items-center justify-center relative overflow-hidden bg-background">
    <!-- Animated Background -->
    <div class="absolute inset-0 overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-br from-cyan-500/10 via-transparent to-transparent opacity-30"></div>
      <div class="cyber-grid"></div>
    </div>

    <!-- Content -->
    <div class="container-custom relative z-10 py-20">
      <div class="max-w-3xl mx-auto text-center">
        <!-- 404 Glitch Effect -->
        <div class="mb-8">
          <h1 class="text-[120px] md:text-[180px] lg:text-[220px] font-bold font-mono leading-none glitch-text" data-text="404">
            404
          </h1>
          <div class="h-1 w-32 mx-auto bg-gradient-to-r from-transparent via-cyan-500 to-transparent animate-pulse"></div>
        </div>

        <!-- Error Message -->
        <div class="space-y-4 mb-12">
          <h2 class="text-2xl md:text-3xl lg:text-4xl font-bold text-foreground font-mono">
            Page Not Found
          </h2>
          <p class="text-lg text-muted-foreground max-w-xl mx-auto">
            The page you are looking for does not exist or has been moved.
          </p>
        </div>

        <!-- Actions -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
          <!-- Home Button -->
          <a
            href="/en"
            class="inline-flex items-center gap-2 px-8 py-4 rounded-lg bg-gradient-to-r from-cyan-500 to-cyan-600 hover:from-cyan-600 hover:to-cyan-700 text-white font-semibold font-mono transition-all duration-300 hover:scale-105 hover:shadow-xl cyan-glow-hover"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
            </svg>
            Back to Home
          </a>

          <!-- Contact Button -->
          <a
            href="/en/contact"
            class="inline-flex items-center gap-2 px-8 py-4 rounded-lg border-2 border-cyan-500/30 hover:border-cyan-500 text-cyan-500 font-semibold font-mono transition-all duration-300 hover:bg-cyan-500/10"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            Contact Us
          </a>
        </div>

        <!-- Helpful Links -->
        <div class="mt-16 pt-8 border-t border-border/30">
          <p class="text-sm text-muted-foreground mb-4 font-mono">
            You might be looking for:
          </p>
          <div class="flex flex-wrap gap-3 justify-center">
            <a
              href="/en/projects"
              class="text-sm text-muted-foreground hover:text-cyan-500 transition-colors font-mono"
            >
              Projects
            </a>
            <span class="text-muted-foreground">•</span>
            <a
              href="/en/services"
              class="text-sm text-muted-foreground hover:text-cyan-500 transition-colors font-mono"
            >
              Services
            </a>
            <span class="text-muted-foreground">•</span>
            <a
              href="/en/contact"
              class="text-sm text-muted-foreground hover:text-cyan-500 transition-colors font-mono"
            >
              Contact
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Decorative Elements -->
    <div class="absolute top-20 left-10 w-64 h-64 bg-gradient-radial from-cyan-500/10 to-transparent rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute bottom-20 right-10 w-96 h-96 bg-gradient-radial from-cyan-500/10 to-transparent rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>
  </main>
</BaseLayout>

<style>
  /* Cyber Grid */
  .cyber-grid {
    background-image:
      linear-gradient(rgba(6, 182, 212, 0.05) 1px, transparent 1px),
      linear-gradient(90deg, rgba(6, 182, 212, 0.05) 1px, transparent 1px);
    background-size: 50px 50px;
    animation: grid-animation 20s linear infinite;
  }

  @keyframes grid-animation {
    0% {
      background-position: 0 0;
    }
    100% {
      background-position: 50px 50px;
    }
  }

  /* Glitch Text Effect */
  .glitch-text {
    position: relative;
    color: #06b6d4;
    text-shadow:
      0 0 10px rgba(6, 182, 212, 0.5),
      0 0 20px rgba(6, 182, 212, 0.3),
      0 0 30px rgba(6, 182, 212, 0.2);
    animation: glitch 3s infinite;
  }

  .glitch-text::before,
  .glitch-text::after {
    content: attr(data-text);
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .glitch-text::before {
    left: 2px;
    text-shadow: -2px 0 #ff00ff;
    clip: rect(44px, 450px, 56px, 0);
    animation: glitch-anim 5s infinite linear alternate-reverse;
  }

  .glitch-text::after {
    left: -2px;
    text-shadow: -2px 0 #00ffff;
    clip: rect(44px, 450px, 56px, 0);
    animation: glitch-anim2 5s infinite linear alternate-reverse;
  }

  @keyframes glitch {
    0%, 100% {
      transform: translate(0);
    }
    20% {
      transform: translate(-2px, 2px);
    }
    40% {
      transform: translate(-2px, -2px);
    }
    60% {
      transform: translate(2px, 2px);
    }
    80% {
      transform: translate(2px, -2px);
    }
  }

  @keyframes glitch-anim {
    0% {
      clip: rect(31px, 9999px, 94px, 0);
    }
    25% {
      clip: rect(70px, 9999px, 71px, 0);
    }
    50% {
      clip: rect(24px, 9999px, 5px, 0);
    }
    75% {
      clip: rect(97px, 9999px, 89px, 0);
    }
    100% {
      clip: rect(78px, 9999px, 23px, 0);
    }
  }

  @keyframes glitch-anim2 {
    0% {
      clip: rect(65px, 9999px, 23px, 0);
    }
    25% {
      clip: rect(90px, 9999px, 100px, 0);
    }
    50% {
      clip: rect(60px, 9999px, 80px, 0);
    }
    75% {
      clip: rect(10px, 9999px, 40px, 0);
    }
    100% {
      clip: rect(50px, 9999px, 70px, 0);
    }
  }

  /* Cyan Glow Hover */
  .cyan-glow-hover {
    transition: box-shadow 0.3s ease;
  }

  .cyan-glow-hover:hover {
    box-shadow: 0 0 30px rgba(6, 182, 212, 0.5);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .glitch-text {
      font-size: 80px;
    }
  }
</style>
