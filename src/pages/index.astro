---
import BaseLayout from '@layouts/BaseLayout.astro';
import Hero from '@components/home/Hero.astro';
import ValuePropositions from '@components/home/ValuePropositions.astro';
import ServicesOverview from '@components/home/ServicesOverview.astro';
import FeaturedProjects from '@components/home/FeaturedProjects.astro';
import FAQ from '@components/home/FAQ.astro';
import FinalCTA from '@components/home/FinalCTA.astro';

const lang = 'fr';
const title = 'AutomX - Automatisation des Processus Métier | Optimisation des Flux d\'Information';
const description = 'Experts en automatisation des processus métier avec n8n, Make et Zapier. Gagnez en productivité, réduisez les erreurs et obtenez un ROI rapide. Audit gratuit offert.';
---

<BaseLayout
  lang={lang}
  title={title}
  description={description}
  noindex={false}
>
  <!-- Hero Section -->
  <Hero />

  <!-- Value Propositions Section -->
  <ValuePropositions />

  <!-- Services Overview Section -->
  <ServicesOverview />

  <!-- Featured Projects Section -->
  <FeaturedProjects />

  <!-- FAQ Section -->
  <FAQ />

  <!-- Final CTA Section -->
  <FinalCTA />

  <!-- Initialize scroll animations -->
  <script>
    import '@scripts/scroll-animations.ts';
  </script>
</BaseLayout>
