---
interface Props {
  imageUrl: string;
  imageAlt?: string;
  variant?: 'cyan' | 'green' | 'purple';
  className?: string;
}

const { imageUrl, imageAlt = 'Mobile preview', variant = 'cyan', className = '' } = Astro.props;

const variantColors = {
  cyan: {
    glow: 'rgba(14, 165, 233, 0.4)',
    border: 'border-cyan-500/20'
  },
  green: {
    glow: 'rgba(34, 197, 94, 0.4)',
    border: 'border-cyan-500/20'
  },
  purple: {
    glow: 'rgba(168, 85, 247, 0.4)',
    border: 'border-cyan-500/20'
  }
};

const colors = variantColors[variant];
---

<div class={`mobile-phone-mockup ${className}`} data-variant={variant}>
  <!-- Phone Frame -->
  <div class="phone-frame">
    <!-- Notch -->
    <div class="phone-notch">
      <div class="notch-camera"></div>
    </div>

    <!-- Screen Content -->
    <div class="phone-screen">
      <img
        src={imageUrl}
        alt={imageAlt}
        class="w-full h-full object-cover object-top phone-screenshot"
        loading="lazy"
      />
      <!-- Screen reflection overlay -->
      <div class="phone-reflection"></div>
    </div>
  </div>
</div>

<style define:vars={{ glowColor: colors.glow }}>
  .mobile-phone-mockup {
    position: relative;
    width: 100%;
    max-width: 12rem;
  }

  .phone-frame {
    position: relative;
    background: hsl(var(--grey-20));
    border: 2px solid hsl(var(--grey-25));
    border-radius: 2rem;
    padding: 0.5rem;
    box-shadow:
      0 8px 24px rgba(0, 0, 0, 0.5),
      inset 0 0 0 1px rgba(255, 255, 255, 0.05);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .mobile-phone-mockup:hover .phone-frame {
    transform: translateY(-4px) rotate(-1deg);
    box-shadow:
      0 12px 32px rgba(0, 0, 0, 0.6),
      0 0 40px var(--glowColor),
      inset 0 0 0 1px rgba(255, 255, 255, 0.1);
  }

  .phone-notch {
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 40%;
    height: 1.5rem;
    background: hsl(var(--grey-20));
    border-bottom-left-radius: 1rem;
    border-bottom-right-radius: 1rem;
    z-index: 10;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .notch-camera {
    width: 0.5rem;
    height: 0.5rem;
    background: hsl(var(--grey-10));
    border-radius: 50%;
  }

  .phone-screen {
    position: relative;
    background: hsl(var(--grey-10));
    border-radius: 1.5rem;
    overflow: hidden;
    aspect-ratio: 9 / 19.5;
  }

  .phone-screenshot {
    transition: transform 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .mobile-phone-mockup:hover .phone-screenshot {
    transform: scale(1.03);
  }

  .phone-reflection {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg,
      rgba(255, 255, 255, 0.1) 0%,
      transparent 40%,
      transparent 60%,
      rgba(255, 255, 255, 0.05) 100%
    );
    pointer-events: none;
  }

  /* Variant-specific glows */
  .mobile-phone-mockup[data-variant="cyan"]:hover .phone-frame {
    box-shadow:
      0 12px 32px rgba(0, 0, 0, 0.6),
      0 0 40px rgba(14, 165, 233, 0.4),
      inset 0 0 0 1px rgba(14, 165, 233, 0.2);
  }

  .mobile-phone-mockup[data-variant="green"]:hover .phone-frame {
    box-shadow:
      0 12px 32px rgba(0, 0, 0, 0.6),
      0 0 40px rgba(34, 197, 94, 0.4),
      inset 0 0 0 1px rgba(34, 197, 94, 0.2);
  }

  .mobile-phone-mockup[data-variant="purple"]:hover .phone-frame {
    box-shadow:
      0 12px 32px rgba(0, 0, 0, 0.6),
      0 0 40px rgba(168, 85, 247, 0.4),
      inset 0 0 0 1px rgba(168, 85, 247, 0.2);
  }

  /* Responsive sizing */
  @media (max-width: 768px) {
    .mobile-phone-mockup {
      max-width: 8rem;
    }

    .phone-notch {
      height: 1rem;
    }

    .notch-camera {
      width: 0.375rem;
      height: 0.375rem;
    }
  }
</style>
