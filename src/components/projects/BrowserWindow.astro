---
interface Props {
  imageUrl: string;
  imageAlt?: string;
  variant?: 'cyan' | 'green' | 'purple';
  aspectRatio?: '16/9' | '16/10' | 'auto';
}

const { imageUrl, imageAlt = 'Project preview', variant = 'cyan', aspectRatio = '16/9' } = Astro.props;

const variantColors = {
  cyan: {
    glow: 'rgba(14, 165, 233, 0.3)',
    border: 'border-cyan-500/30'
  },
  green: {
    glow: 'rgba(34, 197, 94, 0.3)',
    border: 'border-cyan-500/30'
  },
  purple: {
    glow: 'rgba(168, 85, 247, 0.3)',
    border: 'border-cyan-500/30'
  }
};

const colors = variantColors[variant];
---

<div class="browser-window-mockup" data-variant={variant}>
  <!-- Browser Chrome -->
  <div class="browser-chrome">
    <div class="browser-controls">
      <div class="browser-dot bg-red-500/80 hover:bg-red-500 transition-colors cursor-pointer"></div>
      <div class="browser-dot bg-yellow-500/80 hover:bg-yellow-500 transition-colors cursor-pointer"></div>
      <div class="browser-dot bg-cyan-500/80 hover:bg-cyan-500 transition-colors cursor-pointer"></div>
    </div>
    <div class="browser-url">
      <svg class="w-3 h-3 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
      </svg>
      <span class="text-xs font-mono text-muted-foreground truncate">https://project.example.com</span>
    </div>
  </div>

  <!-- Browser Content -->
  <div class={`browser-content ${aspectRatio !== 'auto' ? `aspect-[${aspectRatio.replace('/', '/')}]` : ''}`}>
    <img
      src={imageUrl}
      alt={imageAlt}
      class="w-full h-full object-cover object-top browser-screenshot"
      loading="lazy"
    />
    <!-- Subtle gradient overlay for depth -->
    <div class="absolute inset-0 bg-gradient-to-t from-background/20 to-transparent pointer-events-none"></div>
  </div>
</div>

<style define:vars={{ glowColor: colors.glow }}>
  .browser-window-mockup {
    position: relative;
    border-radius: 0.75rem;
    overflow: hidden;
    background: hsl(var(--grey-20));
    box-shadow:
      0 8px 24px rgba(0, 0, 0, 0.4),
      0 0 0 1px rgba(255, 255, 255, 0.05);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .browser-window-mockup:hover {
    transform: translateY(-2px);
    box-shadow:
      0 12px 32px rgba(0, 0, 0, 0.5),
      0 0 40px var(--glowColor),
      0 0 0 1px rgba(255, 255, 255, 0.1);
  }

  .browser-chrome {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1rem;
    background: hsl(var(--grey-25));
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
  }

  .browser-controls {
    display: flex;
    gap: 0.5rem;
  }

  .browser-dot {
    width: 0.75rem;
    height: 0.75rem;
    border-radius: 50%;
  }

  .browser-url {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    flex: 1;
    min-width: 0;
    padding: 0.375rem 0.75rem;
    background: hsl(var(--grey-20));
    border-radius: 0.375rem;
    border: 1px solid rgba(255, 255, 255, 0.05);
  }

  .browser-content {
    position: relative;
    overflow: hidden;
    background: hsl(var(--grey-10));
  }

  .browser-screenshot {
    transition: transform 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .browser-window-mockup:hover .browser-screenshot {
    transform: scale(1.02);
  }

  /* Variant-specific glow */
  .browser-window-mockup[data-variant="cyan"]:hover {
    box-shadow:
      0 12px 32px rgba(0, 0, 0, 0.5),
      0 0 40px rgba(14, 165, 233, 0.3),
      0 0 0 1px rgba(14, 165, 233, 0.2);
  }

  .browser-window-mockup[data-variant="green"]:hover {
    box-shadow:
      0 12px 32px rgba(0, 0, 0, 0.5),
      0 0 40px rgba(34, 197, 94, 0.3),
      0 0 0 1px rgba(34, 197, 94, 0.2);
  }

  .browser-window-mockup[data-variant="purple"]:hover {
    box-shadow:
      0 12px 32px rgba(0, 0, 0, 0.5),
      0 0 40px rgba(168, 85, 247, 0.3),
      0 0 0 1px rgba(168, 85, 247, 0.2);
  }
</style>
