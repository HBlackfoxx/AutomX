---
import { useTranslations, type Language, getAlternateLang, convertPath } from '../i18n/utils';
import ThemeSwitcher from './ThemeSwitcher.astro';

export interface Props {
  lang?: Language;
  currentPath?: string;
}

const { lang = 'fr', currentPath = '/' } = Astro.props;
const { t } = useTranslations(lang);
const alternateLang = getAlternateLang(lang);
const alternatePath = convertPath(currentPath, lang, alternateLang);
---

<header
  id="main-header"
  class="cyber-header fixed top-0 left-0 right-0 z-[9999] w-full border-b border-border/40 bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60 transition-all duration-300"
>
  <!-- Cyber Grid Background -->
  <div class="header-grid-bg"></div>

  <div class="container-custom relative z-10 flex h-20 items-center justify-between">
    {/* Logo - Cyber Style */}
    <a href={lang === 'fr' ? '/' : '/en'} class="logo-wrapper group flex items-center space-x-3 -ml-2 -my-2 p-2">
      <!-- Logo Icon with Clip Corner -->
      <div class="logo-icon relative flex h-12 w-12 items-center justify-center bg-grey-20 hover:bg-cyan-500 text-white font-bold text-xl transition-all duration-300 overflow-hidden">
        <!-- Clip corner effect -->
        <div class="absolute inset-0 clip-corner-logo bg-gradient-to-br from-grey-20 to-grey-15 group-hover:from-cyan-500 group-hover:to-cyan-500/80 transition-all duration-300"></div>
        <span class="relative z-10">A</span>

        <!-- Corner accent -->
        <div class="absolute top-0 right-0 w-2 h-2 bg-cyan-500 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
      </div>

      <!-- Logo Text -->
      <div class="flex flex-col">
        <span class="text-xl font-bold text-foreground tracking-tight group-hover:text-cyan-500 transition-colors duration-300">AutomX</span>
        <span class="text-[10px] text-muted-foreground uppercase tracking-widest">Digital Solutions</span>
      </div>
    </a>

    {/* Navigation Menu - Desktop */}
    <nav class="hidden md:flex items-center gap-1 lg:gap-2">
      <a
        href={lang === 'fr' ? '/' : '/en'}
        class="nav-link px-4 py-2 text-sm font-mono text-muted-foreground hover:text-cyan-500 transition-colors duration-300 relative group"
      >
        <span class="relative z-10">{t('nav.home')}</span>
        <span class="absolute inset-0 bg-cyan-500/10 opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded"></span>
      </a>
      <a
        href={lang === 'fr' ? '/projets' : '/en/projects'}
        class="nav-link px-4 py-2 text-sm font-mono text-muted-foreground hover:text-cyan-500 transition-colors duration-300 relative group"
      >
        <span class="relative z-10">{t('nav.projects')}</span>
        <span class="absolute inset-0 bg-cyan-500/10 opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded"></span>
      </a>
      <a
        href={lang === 'fr' ? '/services' : '/en/services'}
        class="nav-link px-4 py-2 text-sm font-mono text-muted-foreground hover:text-cyan-500 transition-colors duration-300 relative group"
      >
        <span class="relative z-10">{t('nav.services')}</span>
        <span class="absolute inset-0 bg-cyan-500/10 opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded"></span>
      </a>
      <a
        href={lang === 'fr' ? '/contact' : '/en/contact'}
        class="nav-link px-4 py-2 text-sm font-mono text-muted-foreground hover:text-cyan-500 transition-colors duration-300 relative group"
      >
        <span class="relative z-10">{t('nav.contact')}</span>
        <span class="absolute inset-0 bg-cyan-500/10 opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded"></span>
      </a>
    </nav>

    {/* Actions */}
    <div class="flex items-center space-x-2 md:space-x-3">
      {/* CTA Button - Desktop */}
      <a
        href={lang === 'fr' ? '/contact' : '/en/contact'}
        class="hidden md:inline-flex cyber-button-secondary group relative px-4 py-2.5 text-sm font-mono font-bold uppercase tracking-wider border-2 border-border hover:border-cyan-500 transition-colors scramble-btn"
      >
        <span class="relative z-10 flex items-center gap-2">
          <span class="scramble-text" data-text={t('nav.cta')}>{t('nav.cta')}</span>
          <svg class="w-4 h-4 transition-transform group-hover:translate-x-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
          </svg>
        </span>
      </a>

      {/* Language Switcher - Cyber Button */}
      <a
        href={alternatePath}
        class="cyber-btn inline-flex items-center justify-center px-4 py-2 text-sm font-medium text-muted-foreground hover:text-cyan-500 border border-border/30 hover:border-cyan-500/50 bg-background/30 backdrop-blur-sm transition-all duration-300 overflow-hidden relative group"
        aria-label={`Switch to ${alternateLang === 'fr' ? 'FranÃ§ais' : 'English'}`}
      >
        <div class="absolute inset-0 bg-cyan-500/10 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
        <svg
          class="h-4 w-4 mr-1.5 relative z-10"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129"
          ></path>
        </svg>
        <span class="relative z-10">{alternateLang.toUpperCase()}</span>
      </a>

      {/* Theme Switcher */}
      <ThemeSwitcher />

      {/* Mobile Menu Button */}
      <button
        id="mobile-menu-button"
        class="md:hidden inline-flex items-center justify-center p-2 text-muted-foreground hover:text-cyan-500 border border-border/30 hover:border-cyan-500/50 bg-background/30 backdrop-blur-sm transition-all duration-300"
        aria-label="Toggle mobile menu"
        aria-expanded="false"
      >
        <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path class="menu-icon-open" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
          <path class="menu-icon-close hidden" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>
    </div>
  </div>

  {/* Mobile Menu */}
  <div id="mobile-menu" class="hidden md:hidden border-t border-border/40 bg-background/95 backdrop-blur">
    <nav class="container-custom py-4 flex flex-col space-y-2">
      <a
        href={lang === 'fr' ? '/' : '/en'}
        class="nav-link-mobile px-4 py-3 text-sm font-mono text-muted-foreground hover:text-cyan-500 hover:bg-cyan-500/10 transition-colors duration-300 rounded"
      >
        {t('nav.home')}
      </a>
      <a
        href={lang === 'fr' ? '/projets' : '/en/projects'}
        class="nav-link-mobile px-4 py-3 text-sm font-mono text-muted-foreground hover:text-cyan-500 hover:bg-cyan-500/10 transition-colors duration-300 rounded"
      >
        {t('nav.projects')}
      </a>
      <a
        href={lang === 'fr' ? '/services' : '/en/services'}
        class="nav-link-mobile px-4 py-3 text-sm font-mono text-muted-foreground hover:text-cyan-500 hover:bg-cyan-500/10 transition-colors duration-300 rounded"
      >
        {t('nav.services')}
      </a>
      <a
        href={lang === 'fr' ? '/contact' : '/en/contact'}
        class="nav-link-mobile px-4 py-3 text-sm font-mono text-muted-foreground hover:text-cyan-500 hover:bg-cyan-500/10 transition-colors duration-300 rounded"
      >
        {t('nav.contact')}
      </a>

      {/* CTA Button - Mobile */}
      <a
        href={lang === 'fr' ? '/contact' : '/en/contact'}
        class="cyber-button-secondary group relative px-4 py-3 mt-4 font-mono font-bold uppercase tracking-wider text-sm border-2 border-border hover:border-cyan-500 transition-colors scramble-btn"
      >
        <span class="relative z-10 flex items-center justify-center gap-2">
          <span class="scramble-text" data-text={t('nav.cta')}>{t('nav.cta')}</span>
          <svg class="w-4 h-4 transition-transform group-hover:translate-x-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
          </svg>
        </span>
      </a>
    </nav>
    </div>
  </div>

  <!-- Bottom Scan Line -->
  <div class="scan-line"></div>
</header>

<style>
  /* ============================================
     CYBER HEADER
     ============================================ */
  .cyber-header {
    overflow: hidden;
  }

  /* Scrolled state - enhanced shadow and border */
  .cyber-header.scrolled {
    box-shadow: 0 4px 20px rgba(14, 165, 233, 0.15);
    border-bottom-color: rgba(14, 165, 233, 0.3);
  }

  /* Header Grid Background */
  .header-grid-bg {
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(rgba(14, 165, 233, 0.03) 1px, transparent 1px),
      linear-gradient(90deg, rgba(14, 165, 233, 0.03) 1px, transparent 1px);
    background-size: 20px 20px;
    opacity: 0.5;
    pointer-events: none;
  }

  /* Scan Line Animation */
  .scan-line {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(14, 165, 233, 0.5) 50%,
      transparent
    );
    animation: scan 3s linear infinite;
  }

  @keyframes scan {
    0% { transform: translateX(-100%); }
    100% { transform: translateX(100%); }
  }

  /* Logo Clip Corner */
  .clip-corner-logo {
    clip-path: polygon(
      0 0,
      calc(100% - 8px) 0,
      100% 8px,
      100% 100%,
      8px 100%,
      0 calc(100% - 8px)
    );
  }

  /* Cyber Button Clip Corner */
  .cyber-btn {
    clip-path: polygon(
      0 0,
      calc(100% - 6px) 0,
      100% 6px,
      100% 100%,
      6px 100%,
      0 calc(100% - 6px)
    );
  }

  /* Logo hover effect */
  .logo-wrapper:hover .logo-icon {
    transform: translateY(-2px);
    box-shadow: 0 4px 20px rgba(14, 165, 233, 0.3);
  }

  /* Navigation Links */
  .nav-link {
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-weight: 500;
  }

  .nav-link-mobile {
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-weight: 500;
  }

  /* Mobile Menu Animation */
  #mobile-menu {
    animation: slideDown 0.3s ease-out;
  }

  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Responsive */
  @media (max-width: 768px) {
    .header-grid-bg {
      background-size: 15px 15px;
    }
  }
</style>

<script>
  // Fixed header that follows scroll with visual feedback
  const header = document.getElementById('main-header');

  function handleScroll() {
    if (!header) return;

    // Add scrolled class for shadow/border effects when scrolled down
    if (window.scrollY > 10) {
      header.classList.add('scrolled');
    } else {
      header.classList.remove('scrolled');
    }
  }

  // Listen to scroll events
  window.addEventListener('scroll', handleScroll, { passive: true });

  // Check on page load
  handleScroll();

  // Mobile menu toggle
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuIconOpen = document.querySelector('.menu-icon-open');
  const menuIconClose = document.querySelector('.menu-icon-close');

  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener('click', () => {
      const isExpanded = mobileMenuButton.getAttribute('aria-expanded') === 'true';

      mobileMenuButton.setAttribute('aria-expanded', (!isExpanded).toString());
      mobileMenu.classList.toggle('hidden');

      if (menuIconOpen && menuIconClose) {
        menuIconOpen.classList.toggle('hidden');
        menuIconClose.classList.toggle('hidden');
      }
    });

    // Close mobile menu when clicking on a link
    const mobileLinks = mobileMenu.querySelectorAll('a');
    mobileLinks.forEach(link => {
      link.addEventListener('click', () => {
        mobileMenu.classList.add('hidden');
        mobileMenuButton.setAttribute('aria-expanded', 'false');
        if (menuIconOpen && menuIconClose) {
          menuIconOpen.classList.remove('hidden');
          menuIconClose.classList.add('hidden');
        }
      });
    });
  }
</script>
