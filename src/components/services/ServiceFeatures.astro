---

<section class="py-16 md:py-24 bg-background">
  <div class="container-custom">
    <!-- Section Header -->
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold mb-4 text-foreground font-mono">
        {title}
      </h2>
    </div>

    <!-- Benefits Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {benefits.map((benefit, index) => (
        <div
          class={`benefit-card group relative p-6 rounded-xl border border-border bg-background transition-all duration-300 hover:scale-105 ${colors.border} ${colors.glow}`}
          style={`animation-delay: ${index * 100}ms`}
        >
          <!-- Icon -->
          <div class={`mb-4 inline-flex items-center justify-center w-12 h-12 rounded-lg bg-gradient-to-br ${colors.iconBg} border transition-transform duration-300 group-hover:scale-110 group-hover:rotate-3`}>
            <svg class={`w-6 h-6 ${colors.icon}`} fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24">
              <path d={iconPaths[benefit.icon] || iconPaths['zap']}></path>
            </svg>
          </div>

          <!-- Title -->
          <h3 class="text-xl font-bold mb-2 text-foreground font-mono">
            {t(benefit.titleKey)}
          </h3>

          <!-- Description -->
          <p class="text-sm text-muted-foreground leading-relaxed">
            {t(benefit.descKey)}
          </p>

          <!-- Hover Glow -->
          <div class="absolute inset-0 rounded-xl opacity-0 group-hover:opacity-100 transition-opacity duration-300 pointer-events-none">
            <div class={`absolute inset-0 bg-gradient-to-br ${colors.iconBg} opacity-10`}></div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .benefit-card {
    opacity: 0;
    animation: fadeInUp 0.6s ease-out forwards;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
