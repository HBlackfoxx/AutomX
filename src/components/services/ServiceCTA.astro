---
interface Props {
  title: string;
  subtitle: string;
  buttonText: string;
  buttonHref?: string;
  color?: 'cyan' | 'purple' | 'green';
}

const {
  title,
  subtitle,
  buttonText,
  buttonHref = '/contact',
  color = 'cyan'
} = Astro.props;

const colorClasses = {
  cyan: {
    gradient: 'from-cyan-500/10 via-transparent to-transparent',
    button: 'bg-gradient-to-r from-cyan-500 to-cyan-600 hover:from-cyan-600 hover:to-cyan-700',
    glow: 'hover:shadow-cyan-500/50'
  },
  purple: {
    gradient: 'from-cyan-500/10 via-transparent to-transparent',
    button: 'bg-gradient-to-r from-cyan-500 to-purple-600 hover:from-purple-600 hover:to-purple-700',
    glow: 'hover:shadow-cyan-500/50'
  },
  green: {
    gradient: 'from-cyan-500/10 via-transparent to-transparent',
    button: 'bg-gradient-to-r from-cyan-500 to-green-600 hover:from-green-600 hover:to-green-700',
    glow: 'hover:shadow-cyan-500/50'
  }
};

const colors = colorClasses[color];
---

<section class="relative py-20 md:py-28 overflow-hidden bg-background">
  <!-- Background -->
  <div class="absolute inset-0">
    <div class={`absolute inset-0 bg-gradient-to-br ${colors.gradient} opacity-30`}></div>
    <div class="cyber-grid"></div>
  </div>

  <!-- Content -->
  <div class="container-custom relative z-10">
    <div class="max-w-3xl mx-auto text-center">
      <!-- Title -->
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-4 text-foreground font-mono">
        {title}
      </h2>

      <!-- Subtitle -->
      <p class="text-lg md:text-xl text-muted-foreground mb-8">
        {subtitle}
      </p>

      <!-- CTA Button -->
      <a
        href={buttonHref}
        class={`inline-flex items-center gap-2 px-8 py-4 rounded-lg ${colors.button} text-white font-semibold font-mono transition-all duration-300 hover:scale-105 hover:shadow-xl ${colors.glow}`}
      >
        {buttonText}
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6" />
        </svg>
      </a>
    </div>
  </div>

  <!-- Decorative Elements -->
  <div class="absolute top-0 right-0 w-96 h-96 bg-gradient-radial from-cyan-500/10 to-transparent rounded-full blur-3xl"></div>
  <div class="absolute bottom-0 left-0 w-64 h-64 bg-gradient-radial from-cyan-500/10 to-transparent rounded-full blur-3xl"></div>
</section>

<style>
  .cyber-grid {
    background-image:
      linear-gradient(rgba(6, 182, 212, 0.03) 1px, transparent 1px),
      linear-gradient(90deg, rgba(6, 182, 212, 0.03) 1px, transparent 1px);
    background-size: 50px 50px;
  }
</style>
