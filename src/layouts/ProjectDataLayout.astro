---
import BaseLayout from './BaseLayout.astro';
import DataChart from '@components/projects/DataChart.astro';

const { frontmatter, lang = 'fr' } = Astro.props;

const {
  title,
  description,
  client,
  date,
  technologies = [],
  industry,
  metrics = [],
  dataStack = [],
  insights = []
} = frontmatter;
---

<BaseLayout
  lang={lang}
  title={`${title} - ${client} | AutomX`}
  description={description}
  noindex={false}
>
  <!-- Project Hero with Data Dashboard Preview -->
  <section class="relative min-h-[85vh] flex items-center justify-center overflow-hidden bg-background border-b border-border/30">
    <div class="cyber-grid"></div>
    <div class="scan-lines"></div>

    <div class="container-custom relative z-10 py-12 md:py-20">
      <div class="max-w-7xl mx-auto">
        <!-- Back Button -->
        <a
          href={lang === 'fr' ? '/projets' : '/en/projects'}
          class="inline-flex items-center gap-2 text-sm font-mono text-muted-foreground hover:text-cyan-500 transition-colors mb-6 group fade-in-scroll"
        >
          <svg class="w-4 h-4 transition-transform group-hover:-translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
          </svg>
          {lang === 'en' ? 'Back to projects' : 'Retour aux projets'}
        </a>

        <div class="grid lg:grid-cols-2 gap-12 items-center">
          <!-- Left: Project Info -->
          <div>
            <!-- Badge -->
            <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full border border-cyan-500/30 backdrop-blur-sm mb-6 animate-fade-in-up">
              <span class="pulse-dot bg-cyan-500"></span>
              <span class="text-xs font-mono text-cyan-500 uppercase tracking-widest">{lang === 'en' ? 'Data Analysis' : 'Analyse de Données'}</span>
            </div>

            <!-- Title -->
            <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold tracking-tight mb-6 animate-fade-in-up" style="animation-delay: 0.1s">
              <span class="text-gradient-purple">{title}</span>
            </h1>

            <!-- Meta Info -->
            <div class="grid grid-cols-2 md:grid-cols-3 gap-4 mb-6 animate-fade-in-up" style="animation-delay: 0.2s">
              <div class="p-4 rounded-lg border border-border/30 bg-background/50">
                <div class="text-xs font-mono text-muted-foreground mb-1 uppercase tracking-wider">{lang === 'en' ? 'Client' : 'Client'}</div>
                <div class="font-mono text-cyan-500 font-bold truncate">{client}</div>
              </div>
              <div class="p-4 rounded-lg border border-border/30 bg-background/50">
                <div class="text-xs font-mono text-muted-foreground mb-1 uppercase tracking-wider">{lang === 'en' ? 'Industry' : 'Secteur'}</div>
                <div class="font-mono text-cyan-500 font-bold truncate">{industry}</div>
              </div>
              <div class="p-4 rounded-lg border border-border/30 bg-background/50">
                <div class="text-xs font-mono text-muted-foreground mb-1 uppercase tracking-wider">{lang === 'en' ? 'Date' : 'Date'}</div>
                <div class="font-mono text-cyan-500 font-bold">{new Date(date).toLocaleDateString(lang === 'en' ? 'en-US' : 'fr-FR', { year: 'numeric', month: 'short' })}</div>
              </div>
            </div>

            <!-- Description -->
            <p class="text-lg text-muted-foreground mb-8 leading-relaxed animate-fade-in-up" style="animation-delay: 0.3s">
              {description}
            </p>

            <!-- Quick Stats -->
            {metrics && metrics.length > 0 && (
              <div class="grid grid-cols-2 gap-4 mb-8 animate-fade-in-up" style="animation-delay: 0.4s">
                {metrics.slice(0, 4).map((metric: any) => (
                  <div class="p-4 rounded-lg border border-cyan-500/30 bg-cyan-500/5 backdrop-blur-sm text-center hover:border-cyan-500/50 hover:bg-cyan-500/10 transition-all duration-300">
                    <div class="text-2xl font-bold font-mono text-cyan-500 mb-1">{metric.value}</div>
                    <div class="text-xs text-muted-foreground font-mono uppercase tracking-wider line-clamp-1">{metric.label}</div>
                  </div>
                ))}
              </div>
            )}

            <!-- Tech Stack -->
            {technologies && technologies.length > 0 && (
              <div class="animate-fade-in-up" style="animation-delay: 0.5s">
                <div class="text-xs font-mono text-muted-foreground mb-3 uppercase tracking-wider">{lang === 'en' ? 'Data Stack' : 'Stack de Données'}</div>
                <div class="flex flex-wrap gap-2">
                  {technologies.map((tech: string) => (
                    <span class="px-3 py-1.5 text-xs font-mono bg-cyan-500/10 border border-cyan-500/30 rounded-lg text-cyan-500 hover:bg-cyan-500/20 hover:scale-105 transition-all duration-300">
                      {tech}
                    </span>
                  ))}
                </div>
              </div>
            )}
          </div>

          <!-- Right: Mini Dashboard -->
          <div class="relative data-hero fade-in-scroll" style="animation-delay: 0.2s">
            <div class="dashboard-container">
              <div class="dashboard-header">
                <div class="flex items-center gap-2">
                  <div class="w-3 h-3 rounded-full bg-cyan-500 animate-pulse"></div>
                  <span class="text-xs font-mono text-cyan-500 uppercase tracking-wider">{lang === 'en' ? 'Live Data' : 'Données en Direct'}</span>
                </div>
                <div class="text-xs font-mono text-muted-foreground">{new Date().toLocaleDateString(lang === 'en' ? 'en-US' : 'fr-FR')}</div>
              </div>

              <div class="dashboard-body">
                <!-- Multiple Chart Types -->
                <div class="grid grid-cols-2 gap-4 mb-4">
                  <div class="chart-card">
                    <DataChart type="bar" variant="purple" title={lang === 'en' ? 'Performance' : 'Performance'} data={[65, 88, 52, 95, 73, 82, 90]} />
                  </div>
                  <div class="chart-card">
                    <DataChart type="donut" variant="purple" title={lang === 'en' ? 'Completion' : 'Complétion'} data={[87]} />
                  </div>
                </div>

                <div class="chart-card">
                  <DataChart type="line" variant="purple" title={lang === 'en' ? 'Trend Analysis' : 'Analyse de Tendance'} data={[45, 52, 68, 73, 81, 88, 92]} />
                </div>
              </div>
            </div>

            <!-- Decorative Elements -->
            <div class="absolute -top-4 -right-4 w-24 h-24 bg-cyan-500/10 rounded-full blur-3xl animate-pulse-slow"></div>
            <div class="absolute -bottom-4 -left-4 w-32 h-32 bg-cyan-500/5 rounded-full blur-3xl animate-pulse-slow" style="animation-delay: 1s"></div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Key Metrics Dashboard -->
  {metrics && metrics.length > 4 && (
    <section class="relative py-16 md:py-24 bg-background border-b border-border/30">
      <div class="cyber-grid-light"></div>

      <div class="container-custom relative z-10">
        <div class="max-w-7xl mx-auto">
          <div class="text-center mb-12 fade-in-scroll">
            <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full border border-cyan-500/30 bg-cyan-500/10 mb-4">
              <svg class="w-4 h-4 text-cyan-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
              </svg>
              <span class="text-xs font-mono text-cyan-500 uppercase tracking-widest">{lang === 'en' ? 'KPIs' : 'Indicateurs'}</span>
            </div>
            <h2 class="text-3xl md:text-4xl font-bold">{lang === 'en' ? 'Key Performance Indicators' : 'Indicateurs Clés de Performance'}</h2>
          </div>

          <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
            {metrics.map((metric: any, index: number) => (
              <div
                class="metric-card relative p-6 rounded-xl border border-border/30 bg-background/50 backdrop-blur-sm text-center group hover:border-cyan-500/50 transition-all duration-300 fade-in-scroll"
                style={`animation-delay: ${index * 0.05}s`}
              >
                <div class="absolute inset-0 rounded-xl bg-gradient-to-b from-cyan-500/10 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                <div class="relative z-10">
                  <div class="metric-value text-3xl md:text-4xl font-bold font-mono text-cyan-500 mb-2">
                    {metric.value}
                  </div>
                  <div class="text-xs text-muted-foreground font-mono uppercase tracking-wider">{metric.label}</div>
                  {metric.change && (
                    <div class="mt-2 flex items-center justify-center gap-1 text-xs font-mono text-cyan-500">
                      <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"/>
                      </svg>
                      {metric.change}
                    </div>
                  )}
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>
  )}

  <!-- Data Pipeline Architecture -->
  {dataStack && dataStack.length > 0 && (
    <section class="relative py-16 md:py-24 bg-background">
      <div class="container-custom relative z-10">
        <div class="max-w-7xl mx-auto">
          <div class="text-center mb-12 fade-in-scroll">
            <h2 class="text-3xl md:text-4xl font-bold mb-4">{lang === 'en' ? 'Data Pipeline Architecture' : 'Architecture du Pipeline de Données'}</h2>
            <p class="text-muted-foreground max-w-2xl mx-auto">
              {lang === 'en'
                ? 'End-to-end data flow from extraction to visualization'
                : 'Flux de données de bout en bout, de l\'extraction à la visualisation'
              }
            </p>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            {dataStack.map((stage: any, index: number) => (
              <div class="pipeline-stage-container">
                <div
                  class="pipeline-stage card-border-glow-hover card-hover-glow relative p-[1px] overflow-hidden rounded-xl fade-in-scroll"
                  style={`animation-delay: ${index * 0.15}s`}
                >
                  <div class="absolute inset-0 rounded-xl bg-gradient-to-b from-cyan-500/20 via-cyan-500/10 to-transparent"></div>
                  <div class="relative rounded-xl bg-background p-6">
                    <div class="flex items-center gap-3 mb-4">
                      <div class="w-10 h-10 rounded-lg bg-cyan-500/20 flex items-center justify-center border border-cyan-500/30">
                        <span class="font-mono font-bold text-cyan-500">{index + 1}</span>
                      </div>
                      <div class="text-sm font-mono text-cyan-500 uppercase tracking-wider">
                        {lang === 'en' ? 'Stage' : 'Étape'} {index + 1}
                      </div>
                    </div>
                    <h3 class="font-bold text-lg mb-3 text-foreground">{stage.name}</h3>
                    <p class="text-sm text-muted-foreground mb-4 leading-relaxed">{stage.description}</p>
                    <div class="flex flex-wrap gap-2">
                      {stage.tools && stage.tools.map((tool: string) => (
                        <span class="px-2 py-1 text-xs font-mono bg-cyan-500/10 border border-cyan-500/30 rounded text-purple-400">
                          {tool}
                        </span>
                      ))}
                    </div>
                  </div>
                </div>

                {/* Connector Arrow */}
                {index < dataStack.length - 1 && (
                  <div class="pipeline-connector hidden md:block">
                    <svg class="w-8 h-8 text-cyan-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
                    </svg>
                  </div>
                )}
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>
  )}

  <!-- Key Insights -->
  {insights && insights.length > 0 && (
    <section class="relative py-16 md:py-24 bg-background border-y border-border/30">
      <div class="container-custom relative z-10">
        <div class="max-w-7xl mx-auto">
          <div class="text-center mb-12 fade-in-scroll">
            <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full border border-cyan-500/30 bg-cyan-500/10 mb-4">
              <svg class="w-4 h-4 text-cyan-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
              </svg>
              <span class="text-xs font-mono text-cyan-500 uppercase tracking-widest">{lang === 'en' ? 'Insights' : 'Insights'}</span>
            </div>
            <h2 class="text-3xl md:text-4xl font-bold">{lang === 'en' ? 'Key Insights Delivered' : 'Insights Clés Livrés'}</h2>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            {insights.map((insight: any, index: number) => (
              <div
                class="insight-card card-border-glow-hover card-hover-glow relative p-[1px] overflow-hidden rounded-xl fade-in-scroll"
                style={`animation-delay: ${index * 0.1}s`}
              >
                <div class="absolute inset-0 rounded-xl bg-gradient-to-b from-cyan-500/20 via-cyan-500/10 to-transparent"></div>
                <div class="relative rounded-xl bg-background p-6">
                  <div class="flex items-start gap-4">
                    <div class="w-12 h-12 rounded-lg bg-cyan-500/10 flex items-center justify-center border border-cyan-500/30 flex-shrink-0 group-hover:scale-110 transition-transform duration-300">
                      <svg class="w-6 h-6 text-cyan-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
                      </svg>
                    </div>
                    <div class="flex-1">
                      <h3 class="font-bold text-lg mb-2 text-foreground">{insight.title}</h3>
                      <p class="text-sm text-muted-foreground leading-relaxed">{insight.description}</p>
                    </div>
                  </div>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>
  )}

  <!-- Content Slot (Markdown) -->
  <section class="relative py-16 md:py-24 bg-background">
    <div class="container-custom relative z-10">
      <div class="max-w-4xl mx-auto prose prose-invert prose-purple prose-lg">
        <slot />
      </div>
    </div>
  </section>

  <script>
    import '@scripts/scroll-animations.ts';
  </script>

  <style>
    /* Text Gradient */
    .text-gradient-purple {
      background: linear-gradient(
        to right,
        hsl(var(--foreground)),
        #06b6d4,
        hsl(var(--foreground))
      );
      background-size: 200% auto;
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      animation: shimmerText 3s linear infinite;
    }

    @keyframes shimmerText {
      to {
        background-position: 200% center;
      }
    }

    /* Dashboard Container */
    .dashboard-container {
      border-radius: 0.75rem;
      border: 1px solid rgba(168, 85, 247, 0.2);
      background: linear-gradient(135deg, hsl(var(--grey-20)), rgba(168, 85, 247, 0.05));
      backdrop-filter: blur(10px);
      overflow: hidden;
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.4);
      transition: all 0.3s ease;
    }

    .dashboard-container:hover {
      transform: translateY(-4px);
      box-shadow: 0 12px 32px rgba(168, 85, 247, 0.3);
      border-color: rgba(168, 85, 247, 0.4);
    }

    .dashboard-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 1rem 1.5rem;
      border-bottom: 1px solid rgba(255, 255, 255, 0.05);
      background: hsl(var(--grey-25));
    }

    .dashboard-body {
      padding: 1.5rem;
    }

    .chart-card {
      padding: 1rem;
      border-radius: 0.5rem;
      border: 1px solid rgba(255, 255, 255, 0.05);
      background: hsl(var(--grey-25));
    }

    /* Metric Value Animation */
    .metric-value {
      background: linear-gradient(
        to right,
        #06b6d4,
        #8b5cf6,
        #06b6d4
      );
      background-size: 200% auto;
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      animation: shimmer 3s linear infinite;
    }

    @keyframes shimmer {
      to {
        background-position: 200% center;
      }
    }

    /* Pipeline Connectors */
    .pipeline-stage-container {
      position: relative;
    }

    .pipeline-connector {
      position: absolute;
      top: 50%;
      right: -2rem;
      transform: translateY(-50%);
      animation: arrow-pulse 2s ease-in-out infinite;
    }

    @keyframes arrow-pulse {
      0%, 100% {
        opacity: 0.5;
        transform: translateY(-50%) translateX(0);
      }
      50% {
        opacity: 1;
        transform: translateY(-50%) translateX(4px);
      }
    }

    /* Animations */
    @keyframes pulse-slow {
      0%, 100% {
        opacity: 0.4;
      }
      50% {
        opacity: 1;
      }
    }

    .animate-pulse-slow {
      animation: pulse-slow 3s ease-in-out infinite;
    }

    @keyframes fade-in-up {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .animate-fade-in-up {
      animation: fade-in-up 0.6s ease-out forwards;
      opacity: 0;
    }

    /* Responsive */
    @media (max-width: 768px) {
      .dashboard-body {
        padding: 1rem;
      }

      .chart-card {
        padding: 0.75rem;
      }
    }
  </style>
</BaseLayout>
